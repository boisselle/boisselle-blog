
---
import Hamburger from './Hamburger.astro';
---
<header>
    <div class="header-left">
        <span class="header-title">boisselle</span> <!-- Your text on the left -->
    </div>
    <nav>
        <Hamburger />
        <div class="overlay">
            <ul>
                <li><a href="/">Blog</a></li>
                <li><a href="/about">About</a></li>
            </ul>
        </div>
        <ul class="desktop-menu">
            <li><a href="/">Blog</a></li>
            <li><a href="/about">About</a></li>
        </ul>
    </nav>
</header>

<script>
    const overlay = document.querySelector('.overlay');
    const hamburger = document.querySelector('.hamburger');
    const links = document.querySelectorAll('.overlay a');

    window.addEventListener('toggleMenu', (event) => {
        overlay.classList.toggle('show', event.detail.isOpen);
        document.body.style.overflow = event.detail.isOpen ? 'hidden' : '';
    });

    links.forEach(link => {
        link.addEventListener('click', (e) => {
            e.preventDefault();
            overlay.classList.add('fade-out');
            hamburger.classList.remove('active');
            
            setTimeout(() => {
                overlay.classList.remove('show', 'fade-out');
                window.location.href = link.href;
            }, 300);
        });
    });
</script>

<style>
    /* header {
        padding: 1rem;
        background-color: #f4f4f4;
    } */
    header {
        display: flex;
        justify-content: space-between; /* Space between the text and the nav */
        align-items: center; /* Vertically aligns the content */
        /* padding: 10px; */
        background-color: #F0D000;
        border-bottom: 2px solid black;
        margin-bottom: 2rem;
        padding-top: 1.5rem;
        padding-bottom: 0.5rem;
    }

    /* nav {
        display: flex; */
        /* justify-content: space-between;
        align-items: center; */
        /* justify-content: flex-end;
        padding-right: 1rem;
    } */

    nav {
    display: flex;
        align-items: center;
    }

    .header-left {
        flex: 1; /* Ensures the text stays on the left side */
    }

    .header-title {
        font-size: 1.5rem; /* Adjust size as needed */
        font-weight: bold;
        color: black; /* Text color */
    }
    
    .overlay {
        display: flex;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.9);
        z-index: 999;
        justify-content: center;
        align-items: center;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease, visibility 0.3s ease;
    }

    .overlay.show {
        opacity: 1;
        visibility: visible;
    }

    .overlay.fade-out {
        opacity: 0;
    }

    .overlay ul {
        list-style-type: none;
        padding: 0;
    }

    .inactive {
        color: #999;
    }

    .overlay li {
        margin: 20px 0;
        text-align: center;
    }

    .overlay a {
        color: #ffd700;
        text-decoration: none;
        font-size: 45px;
        transition: color 0.3s ease;
    }

    .overlay a:hover {
        color: #ffd700;
    }

    .desktop-menu {
        display: none;
    }

    @media (min-width: 636px) {
        .hamburger {
            display: none;
        }
        
        .overlay {
            display: none !important;
        }

        .desktop-menu {
            display: flex;
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .desktop-menu li {
            margin: 0 15px;
        }

        .desktop-menu a {
            color: #333;
            text-decoration: none;
            font-size: 18px;
            padding: 5px 10px; /* Add padding to keep the size consistent */
            border-radius: 10px; /* Keep the box rounded in the normal state */
            background-color: transparent; /* Make the background transparent by default */
            transition: color 0.3s ease, background-color 0.3s ease, border-radius 0.3s ease;
        }

        .desktop-menu a:hover {
            color: #FFDD00; /* Changes text color to yellow on hover */
            background-color: black; /* Adds black background on hover */

            padding: 10px 10px; /* Adds padding inside the box */
            border-radius: 8px; /* Rounds the corners of the box */
        }
    }
</style>