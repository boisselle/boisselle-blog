---
import { Image } from 'astro:assets';
import Icon from '../components/Icon.astro';
// import xLogo from "/images/logo-black.png";
// import xLogoHover from "/images/logo-yellow.png";
const { platform, username } = Astro.props;

const getPlatformUrl = (platform, username) => {
  if (platform === 'linkedin') {
    return `https://www.linkedin.com/in/${username}`;
  }
  return `https://www.${platform}.com/${username}`;
};
---
<style>
  main {
    margin-top: 0;
    padding-top: 0;
  }
  p {
    margin-top: 0;
    padding-top: 0;
  }
</style>

<main>
  <p>Let's connect!</p>
  <Icon
    normalImage="/images/logo-black.png"
    hoverImage="/images/logo-yellow.png"
    alt="X Logo"
  />
  <Icon 
    normalImage="/images/github-mark.png"
    hoverImage="/images/github-yellow.png"
    alt="Github Logo"
  />
</main>